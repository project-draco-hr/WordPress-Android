{
  if (!isAdded() || mFollowButton == null) {
    return;
  }
  boolean isFollowing=getPostListType() == ReaderPostListType.BLOG_PREVIEW ? ReaderBlogTable.isFollowedBlog(mCurrentBlogId,mCurrentBlogUrl) : ReaderTagTable.isFollowedTagName(getCurrentTagName());
  mFollowButton.setIsFollowed(isFollowing,false);
}
