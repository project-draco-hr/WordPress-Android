{
  if (!isAdded() || mIsUpdating == isUpdating) {
    return;
  }
switch (updateAction) {
case LOAD_OLDER:
    if (isUpdating) {
      showLoadingProgress();
    }
 else {
      hideLoadingProgress();
    }
  break;
default :
if (hasSwipeToRefresh()) {
  mSwipeToRefreshHelper.setRefreshing(isUpdating);
}
break;
}
mIsUpdating=isUpdating;
}
