{
  super.onResume();
  checkPostAdapter();
  if (mWasPaused) {
    AppLog.d(T.READER,"reader post list > resumed from paused state");
    mWasPaused=false;
    if (getPostListType().equals(ReaderPostListType.TAG_FOLLOWED)) {
      resumeFollowedTag();
    }
 else {
      refreshPosts();
    }
  }
}
