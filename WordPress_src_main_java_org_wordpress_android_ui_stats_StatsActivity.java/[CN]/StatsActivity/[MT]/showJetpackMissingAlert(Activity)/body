{
  AlertDialog.Builder builder=new AlertDialog.Builder(currentActivity);
  if (WordPress.getCurrentBlog().isAdmin()) {
    builder.setMessage(getString(R.string.jetpack_message)).setTitle(getString(R.string.jetpack_not_found));
    builder.setPositiveButton(R.string.yes,new DialogInterface.OnClickListener(){
      public void onClick(      DialogInterface dialog,      int id){
        Intent jetpackIntent=new Intent(currentActivity,AuthenticatedWebViewActivity.class);
        jetpackIntent.putExtra(AuthenticatedWebViewActivity.LOAD_AUTHENTICATED_URL,WordPress.getCurrentBlog().getAdminUrl() + "plugin-install.php?tab=search&s=jetpack+by+wordpress.com" + "&plugin-search-input=Search+Plugins");
        startActivityForResult(jetpackIntent,REQUEST_JETPACK);
        AnalyticsTracker.track(AnalyticsTracker.Stat.STATS_SELECTED_INSTALL_JETPACK);
      }
    }
);
    builder.setNegativeButton(R.string.no,new DialogInterface.OnClickListener(){
      public void onClick(      DialogInterface dialog,      int id){
      }
    }
);
  }
 else {
    builder.setMessage(getString(R.string.jetpack_message_not_admin)).setTitle(getString(R.string.jetpack_not_found));
    builder.setPositiveButton(R.string.yes,null);
  }
  builder.create().show();
}
