{
  Cursor cursor=(Cursor)getItem(position);
  int columnIndex=cursor.getColumnIndex("mediaId");
  if (columnIndex != -1) {
    String mediaId=cursor.getString(columnIndex);
    if (selected) {
      mCheckedItems.add(mediaId);
    }
 else {
      mCheckedItems.remove(mediaId);
    }
    notifyDataSetChanged();
  }
}
