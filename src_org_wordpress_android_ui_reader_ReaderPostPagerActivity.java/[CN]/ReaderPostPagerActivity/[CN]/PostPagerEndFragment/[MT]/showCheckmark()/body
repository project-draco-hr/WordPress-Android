{
  if (!hasActivity()) {
    return;
  }
  mTxtCheckmark.setVisibility(View.VISIBLE);
  AnimatorSet set=new AnimatorSet();
  set.setDuration(750);
  set.setInterpolator(new OvershootInterpolator());
  set.playTogether(ObjectAnimator.ofFloat(mTxtCheckmark,"scaleX",0.25f,1f),ObjectAnimator.ofFloat(mTxtCheckmark,"scaleY",0.25f,1f));
  set.start();
}
