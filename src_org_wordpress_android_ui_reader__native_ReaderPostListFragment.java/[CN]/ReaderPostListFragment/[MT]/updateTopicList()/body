{
  ReaderActions.UpdateResultListener listener=new ReaderActions.UpdateResultListener(){
    @Override public void onUpdateResult(    ReaderActions.UpdateResult result){
      if (!hasActivity()) {
        ReaderLog.w("volley response when fragment has no activity");
        return;
      }
      if (result != ReaderActions.UpdateResult.FAILED)       mAlreadyUpdatedTopicList=true;
      if (result == ReaderActions.UpdateResult.CHANGED)       refreshTopics();
    }
  }
;
  ReaderTagActions.updateTopics(listener);
}
