{
  ActionBar actionBar=getActionBar();
  if (actionBar == null)   return;
  actionBar.setDisplayShowTitleEnabled(false);
  actionBar.setNavigationMode(ActionBar.NAVIGATION_MODE_LIST);
  ActionBar.OnNavigationListener navigationListener=new ActionBar.OnNavigationListener(){
    @Override public boolean onNavigationItemSelected(    int itemPosition,    long itemId){
      ReaderTag topic=(ReaderTag)getActionBarAdapter().getItem(itemPosition);
      if (topic != null) {
        setCurrentTopic(topic.getTagName());
        ReaderLog.d("topic chosen from actionbar: " + topic.getTagName());
      }
      return true;
    }
  }
;
  actionBar.setListNavigationCallbacks(getActionBarAdapter(),navigationListener);
}
