{
  super.onSaveInstanceState(outState);
  outState.putBoolean(KEY_TAG_LIST_UPDATED,mAlreadyUpdatedTagList);
  if (hasCurrentTag())   outState.putString(KEY_TAG_NAME,mCurrentTag);
  if (hasActivity()) {
    final ListView listView=(ListView)getActivity().findViewById(android.R.id.list);
    if (listView.getFirstVisiblePosition() > 0)     outState.putParcelable(LIST_STATE,listView.onSaveInstanceState());
  }
}
