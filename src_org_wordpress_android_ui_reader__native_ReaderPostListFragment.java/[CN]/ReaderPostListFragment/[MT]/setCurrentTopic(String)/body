{
  if (TextUtils.isEmpty(topicName))   return;
  mCurrentTopic=topicName;
  ReaderPrefs.setReaderTopic(topicName);
  getPostAdapter().setTopic(topicName);
  hideNewPostsBar();
  hideLoadingProgress();
  if (ReaderTopicTable.shouldAutoUpdateTopic(topicName))   updatePostsInTopic(topicName,ReaderActions.RequestDataAction.LOAD_NEWER);
}
