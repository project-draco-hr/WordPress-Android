{
  if (TextUtils.isEmpty(tagName))   return;
  mCurrentTag=tagName;
  ReaderPrefs.setReaderTag(tagName);
  getPostAdapter().setTag(tagName);
  hideNewPostsBar();
  hideLoadingProgress();
  if (ReaderTagTable.shouldAutoUpdateTag(tagName))   updatePostsWithTag(tagName,ReaderActions.RequestDataAction.LOAD_NEWER);
}
