{
  super.onBlogChanged();
  FragmentManager fm=getSupportFragmentManager();
  fm.popBackStackImmediate(null,FragmentManager.POP_BACK_STACK_INCLUSIVE);
  if (hasListFragment()) {
    getListFragment().clear();
    updateCommentList();
  }
  if (hasDetailFragment()) {
    getDetailFragment().clear();
  }
}
