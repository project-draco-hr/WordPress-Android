{
  if (outState.isEmpty()) {
    outState.putBoolean("bug_19917_fix",true);
  }
  if (hasListFragment()) {
    long commentId=getListFragment().getHighlightedCommentId();
    if (commentId != 0)     outState.putLong(KEY_HIGHLIGHTED_COMMENT_ID,commentId);
  }
  super.onSaveInstanceState(outState);
}
