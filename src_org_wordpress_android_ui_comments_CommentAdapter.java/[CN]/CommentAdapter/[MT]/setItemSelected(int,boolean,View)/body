{
  if (isItemSelected(position) == isSelected)   return;
  if (isSelected) {
    mSelectedPositions.add(position);
  }
 else {
    mSelectedPositions.remove(position);
  }
  notifyDataSetChanged();
  if (view != null && view.getTag() instanceof CommentHolder) {
    animateSelection((CommentHolder)view.getTag(),isSelected);
  }
  if (mOnSelectedChangeListener != null)   mOnSelectedChangeListener.onSelectedItemsChanged();
}
