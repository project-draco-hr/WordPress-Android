{
  if (isItemChecked(position) == isChecked)   return;
  if (isChecked) {
    mCheckedCommentPositions.add(position);
  }
 else {
    mCheckedCommentPositions.remove(position);
  }
  notifyDataSetChanged();
  if (mOnCheckedChangeListener != null)   mOnCheckedChangeListener.onCheckedItemsChanged();
}
