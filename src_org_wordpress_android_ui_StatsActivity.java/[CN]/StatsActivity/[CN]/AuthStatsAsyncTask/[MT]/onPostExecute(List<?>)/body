{
  currentTask=null;
  stopAnimatingRefreshButton(refreshMenuItem);
  if (authed) {
    loadStats();
  }
 else {
    if (errorMsg == "" || statusCode == 401) {
      Toast.makeText(StatsActivity.this,getResources().getText(R.string.invalid_login),Toast.LENGTH_SHORT).show();
      showLoginForm();
    }
 else {
      Toast.makeText(StatsActivity.this,getResources().getText(R.string.stats_service_error),Toast.LENGTH_SHORT).show();
    }
  }
}
