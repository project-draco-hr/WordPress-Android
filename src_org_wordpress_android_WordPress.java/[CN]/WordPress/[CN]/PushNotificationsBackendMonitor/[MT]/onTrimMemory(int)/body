{
  if (level == ComponentCallbacks2.TRIM_MEMORY_UI_HIDDEN) {
    background=true;
  }
 else {
    background=false;
  }
  if (level < ComponentCallbacks2.TRIM_MEMORY_UI_HIDDEN) {
    int maxMemory=(int)(Runtime.getRuntime().freeMemory() / 1024);
    int cacheSize=maxMemory / 16;
    mBitmapCache.trimToSize(cacheSize);
  }
}
