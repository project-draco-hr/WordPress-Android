{
  if (isInBackground == false) {
    return false;
  }
  isInBackground=false;
  if (!NetworkUtils.isNetworkAvailable(mContext)) {
    return false;
  }
  if (lastPingDate == null) {
    return false;
  }
  Date now=new Date();
  if (DateTimeUtils.secondsBetween(now,lastPingDate) >= DEFAULT_TIMEOUT) {
    lastPingDate=now;
    return true;
  }
  return false;
}
