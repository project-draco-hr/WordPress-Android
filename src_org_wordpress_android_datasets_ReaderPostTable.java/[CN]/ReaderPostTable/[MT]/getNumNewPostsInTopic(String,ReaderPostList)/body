{
  if (posts == null || posts.size() == 0)   return 0;
  if (TextUtils.isEmpty(topicName))   return 0;
  if (getNumPostsInTopic(topicName) == 0)   return posts.size();
  StringBuilder sb=new StringBuilder();
  sb.append("SELECT COUNT(*) FROM tbl_post_topics").append(" WHERE topic_name=?").append(" AND (CAST(post_id AS TEXT) || '-' || CAST(blog_id AS TEXT))").append(" IN (");
  boolean isFirst=true;
  for (  ReaderPost post : posts) {
    if (isFirst) {
      isFirst=false;
    }
 else {
      sb.append(",");
    }
    sb.append("'").append(post.postId).append("-").append(post.blogId).append("'");
  }
  sb.append(")");
  int numExisting=SqlUtils.intForQuery(ReaderDatabase.getReadableDb(),sb.toString(),new String[]{topicName});
  return posts.size() - numExisting;
}
