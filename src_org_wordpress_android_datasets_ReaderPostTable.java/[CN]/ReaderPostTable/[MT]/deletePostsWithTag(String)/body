{
  if (TextUtils.isEmpty(tagName))   return 0;
  int numDeleted=ReaderDatabase.getWritableDb().delete("tbl_post_tags","tag_name=?",new String[]{tagName});
  if (numDeleted > 0)   ReaderDatabase.getWritableDb().delete("tbl_posts","post_id NOT IN (SELECT DISTINCT post_id FROM tbl_post_tags)",null);
  return numDeleted;
}
