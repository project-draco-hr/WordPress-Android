{
  if (formattedTitle == null) {
    Context context=WordPress.getContext();
    final String author=(hasAuthorName() ? getAuthorName() : context.getString(R.string.anonymous));
    if (hasPostTitle()) {
      formattedTitle=author + "<font color=" + HtmlUtils.colorResToHtmlColor(context,R.color.grey_medium)+ ">"+ " "+ context.getString(R.string.on)+ " "+ "</font>"+ getUnescapedPostTitle();
    }
 else {
      formattedTitle=author;
    }
  }
  return formattedTitle;
}
