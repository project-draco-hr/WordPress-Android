{
  HashMap<String,String> params=new HashMap<>();
  String deviceLanguageCode=context != null ? context.getResources().getConfiguration().locale.toString() : Locale.getDefault().getLanguage();
  if (!TextUtils.isEmpty(deviceLanguageCode)) {
    if (deviceLanguageCode.startsWith("iw"))     deviceLanguageCode=deviceLanguageCode.replace("iw","he");
 else     if (deviceLanguageCode.startsWith("in"))     deviceLanguageCode=deviceLanguageCode.replace("in","id");
 else     if (deviceLanguageCode.startsWith("ji"))     deviceLanguageCode=deviceLanguageCode.replace("ji","yi");
    params.put("locale",deviceLanguageCode);
  }
  return params;
}
