{
  if (TextUtils.isEmpty(tagName)) {
    return false;
  }
  if (tagType == null) {
    String[] args={tagName};
    return SqlUtils.boolForQuery(ReaderDatabase.getReadableDb(),"SELECT 1 FROM tbl_tags WHERE tag_name=?1",args);
  }
 else {
    String[] args={tagName,Integer.toString(tagType.toInt())};
    return SqlUtils.boolForQuery(ReaderDatabase.getReadableDb(),"SELECT 1 FROM tbl_tags WHERE tag_name=?1 AND tag_type=?2",args);
  }
}
