{
  db.execSQL("CREATE TABLE tbl_tags (" + "	tag_name	    TEXT COLLATE NOCASE PRIMARY KEY," + "    endpoint        TEXT,"+ "    topic_type      INTEGER DEFAULT 0)");
  db.execSQL("CREATE TABLE tbl_recommended_tags (" + "	tag_name	    TEXT COLLATE NOCASE PRIMARY KEY," + "    endpoint        TEXT,"+ "    topic_type      INTEGER DEFAULT 0)");
  db.execSQL("CREATE TABLE tbl_tag_updates (" + "	    tag_name	 TEXT COLLATE NOCASE PRIMARY KEY," + " 	date_updated TEXT,"+ " 	date_oldest	 TEXT,"+ " 	date_newest	 TEXT)");
}
