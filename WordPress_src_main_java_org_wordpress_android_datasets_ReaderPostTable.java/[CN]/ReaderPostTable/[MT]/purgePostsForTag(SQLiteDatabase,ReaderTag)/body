{
  int numPosts=getNumPostsWithTag(tag);
  if (numPosts <= MAX_POSTS_PER_TAG) {
    return 0;
  }
  int numToPurge=numPosts - MAX_POSTS_PER_TAG;
  String[] args={tag.getTagName(),Integer.toString(tag.tagType.toInt()),Integer.toString(numToPurge)};
  String where="pseudo_id IN (" + "  SELECT tbl_posts.pseudo_id FROM tbl_posts, tbl_post_tags" + "  WHERE tbl_posts.pseudo_id = tbl_post_tags.pseudo_id"+ "  AND tbl_post_tags.tag_name=?1"+ "  AND tbl_post_tags.tag_type=?2"+ "  ORDER BY tbl_posts.timestamp"+ "  LIMIT ?3"+ ")";
  int numDeleted=db.delete("tbl_post_tags",where,args);
  return numDeleted;
}
