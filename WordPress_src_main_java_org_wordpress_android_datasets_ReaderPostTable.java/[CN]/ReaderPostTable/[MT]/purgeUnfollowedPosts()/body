{
  String[] args={ReaderTag.TAG_NAME_FOLLOWING};
  int numPurged=ReaderDatabase.getWritableDb().delete("tbl_post_tags","tag_name=? AND blog_id NOT IN (SELECT DISTINCT blog_id FROM tbl_blog_info WHERE is_following!=0)",args);
  if (numPurged > 0) {
    AppLog.d(AppLog.T.READER,String.format("purged %d unfollowed posts",numPurged));
  }
  return numPurged;
}
