{
  if (tag == null) {
    return 0;
  }
  String sql="SELECT tbl_posts.timestamp FROM tbl_posts, tbl_post_tags" + " WHERE tbl_posts.post_id = tbl_post_tags.post_id AND tbl_posts.blog_id = tbl_post_tags.blog_id" + " AND tbl_post_tags.tag_name=? AND tbl_post_tags.tag_type=?"+ " ORDER BY timestamp LIMIT 1";
  String[] args={tag.getTagName(),Integer.toString(tag.tagType.toInt())};
  return SqlUtils.longForQuery(ReaderDatabase.getReadableDb(),sql,args);
}
