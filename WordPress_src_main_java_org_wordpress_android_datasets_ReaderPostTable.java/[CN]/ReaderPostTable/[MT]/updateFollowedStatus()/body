{
  String sql="UPDATE tbl_posts SET is_followed = 0" + " WHERE is_followed != 0" + " AND blog_id NOT IN (SELECT DISTINCT blog_id FROM tbl_blog_info WHERE is_followed != 0)";
  try {
    ReaderDatabase.getWritableDb().execSQL(sql);
  }
 catch (  Exception e) {
    AppLog.e(AppLog.T.READER,e);
  }
}
