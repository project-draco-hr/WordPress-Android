{
  String tagForFragment=getString(R.string.fragment_tag_reader_post_detail);
  Fragment fragment=ReaderPostDetailFragment.newInstance(blogId,postId);
  FragmentTransaction ft=getSupportFragmentManager().beginTransaction();
  ft.setTransition(FragmentTransaction.TRANSIT_FRAGMENT_FADE).replace(R.id.fragment_container,fragment,tagForFragment).addToBackStack(tagForFragment).commit();
}
