{
  int stretch=3, overreach=getHeight() / 2;
  int max=getMaxScroll();
  max=Math.max(max,0);
  if (scroll < -overreach) {
    scroll=-overreach;
    lastDelta=0;
  }
 else   if (scroll > max + overreach) {
    scroll=max + overreach;
    lastDelta=0;
  }
 else   if (scroll < 0) {
    if (scroll >= -stretch)     scroll=0;
 else     if (!touching)     scroll-=scroll / stretch;
  }
 else   if (scroll > max) {
    if (scroll <= max + stretch)     scroll=max;
 else     if (!touching)     scroll+=(max - scroll) / stretch;
  }
}
