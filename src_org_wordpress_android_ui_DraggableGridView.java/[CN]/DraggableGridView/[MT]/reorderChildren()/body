{
  if (onRearrangeListener != null)   onRearrangeListener.onRearrange(dragged,lastTarget);
  int size=mChildren.size();
  for (int i=0; i < size; i++) {
    getChildAt(i).clearAnimation();
  }
  while (dragged != lastTarget) {
    if (lastTarget == mChildren.size()) {
      mChildren.add(mChildren.remove(dragged));
      dragged=lastTarget;
    }
 else     if (dragged < lastTarget) {
      Collections.swap(mChildren,dragged,dragged + 1);
      dragged++;
    }
 else     if (dragged > lastTarget) {
      Collections.swap(mChildren,dragged,dragged - 1);
      dragged--;
    }
  }
  for (int i=0; i < size; i++) {
    newPositions.set(i,-1);
  }
  onLayout(true,getLeft(),getTop(),getRight(),getBottom());
}
