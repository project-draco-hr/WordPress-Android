{
  if (txtTitle == null)   return;
  if (TextUtils.isEmpty(title)) {
    txtTitle.setText(null);
    return;
  }
  String html=getString(R.string.comment_on) + " <font color=" + HtmlUtils.colorResToHtmlColor(getActivity(),R.color.reader_hyperlink)+ ">"+ title.trim()+ "</font>";
  txtTitle.setText(Html.fromHtml(html));
}
