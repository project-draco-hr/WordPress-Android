{
  if (tagName == null) {
    return "";
  }
  String s=tagName.trim().replaceAll("&[^\\s]*;","").replace(".","-").replaceAll("\\s+","-").replaceAll("[^A-Za-z0-9\\-]","").trim();
  while (s.contains("--"))   s=s.replace("--","-");
  if (!s.equals(tagName)) {
    AppLog.d(AppLog.T.READER,"tag " + tagName + " sanitized to "+ s);
  }
  return s;
}
