{
  String[] asploded=source.split("\n\n");
  String wrappedHTML="";
  if (asploded.length > 0) {
    for (int i=0; i < asploded.length; i++) {
      if (asploded[i].trim().length() > 0)       wrappedHTML+="<p>" + asploded[i].trim() + "</p>";
    }
  }
 else {
    wrappedHTML=source;
  }
  wrappedHTML=wrappedHTML.replace("<br>\n","<br>").replace("\n","<br>");
  return wrappedHTML;
}
