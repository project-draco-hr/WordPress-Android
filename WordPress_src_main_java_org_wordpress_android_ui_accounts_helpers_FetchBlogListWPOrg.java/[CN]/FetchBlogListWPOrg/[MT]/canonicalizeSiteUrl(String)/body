{
  if (TextUtils.isEmpty(siteUrl) || TextUtils.isEmpty(siteUrl.trim())) {
    throw new WPOrgUtilsException(WPOrgUtilsException.Kind.SITE_URL_CANNOT_BE_EMPTY,org.wordpress.android.R.string.invalid_site_url_message,siteUrl,null);
  }
  String baseURL=siteUrl.trim();
  baseURL=UrlUtils.convertUrlToPunycodeIfNeeded(baseURL);
  baseURL=UrlUtils.addUrlSchemeIfNeeded(baseURL,false);
  if (!URLUtil.isValidUrl(baseURL)) {
    throw new WPOrgUtilsException(WPOrgUtilsException.Kind.INVALID_URL,org.wordpress.android.R.string.invalid_site_url_message,baseURL,null);
  }
  return baseURL;
}
