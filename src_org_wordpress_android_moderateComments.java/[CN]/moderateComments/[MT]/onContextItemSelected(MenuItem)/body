{
switch (item.getItemId()) {
case 0:
    showDialog(ID_DIALOG_POSTING);
  new Thread(){
    public void run(){
      Looper.prepare();
      changeCommentStatus("approve",selectedID);
    }
  }
.start();
return true;
case 1:
showDialog(ID_DIALOG_POSTING);
new Thread(){
public void run(){
Looper.prepare();
changeCommentStatus("hold",selectedID);
}
}
.start();
return true;
case 2:
showDialog(ID_DIALOG_POSTING);
new Thread(){
public void run(){
Looper.prepare();
changeCommentStatus("spam",selectedID);
}
}
.start();
return true;
}
return false;
}
