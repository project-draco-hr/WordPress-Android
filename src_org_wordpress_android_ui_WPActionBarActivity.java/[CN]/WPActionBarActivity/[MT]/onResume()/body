{
  super.onResume();
  setupCurrentBlog();
  if (mMenuDrawer != null) {
    updateMenuDrawer();
  }
  Blog currentBlog=WordPress.getCurrentBlog();
  if (currentBlog != null && getSupportActionBar().getNavigationMode() != ActionBar.NAVIGATION_MODE_STANDARD) {
    for (int i=0; i < blogIDs.length; i++) {
      if (blogIDs[i] == currentBlog.getId()) {
        getSupportActionBar().setSelectedNavigationItem(i);
        return;
      }
    }
  }
}
