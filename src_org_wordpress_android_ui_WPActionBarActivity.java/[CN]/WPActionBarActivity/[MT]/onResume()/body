{
  super.onResume();
  setupCurrentBlog();
  if (mMenuDrawer != null) {
    updateMenuDrawer();
  }
  Blog currentBlog=WordPress.getCurrentBlog();
  if (currentBlog != null && mListView.getHeaderViewsCount() > 0) {
    for (int i=0; i < blogIDs.length; i++) {
      if (blogIDs[i] == currentBlog.getId()) {
        mBlogSpinner.setSelection(i);
      }
    }
  }
}
