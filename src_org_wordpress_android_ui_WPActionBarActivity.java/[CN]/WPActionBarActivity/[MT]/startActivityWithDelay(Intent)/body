{
  if (mIsXLargeDevice && getResources().getConfiguration().orientation == Configuration.ORIENTATION_LANDSCAPE) {
    startActivity(i);
  }
 else {
    if (mFirstLaunch) {
      startActivity(i);
      return;
    }
    new Handler().postDelayed(new Runnable(){
      @Override public void run(){
        startActivity(i);
      }
    }
,400);
  }
}
