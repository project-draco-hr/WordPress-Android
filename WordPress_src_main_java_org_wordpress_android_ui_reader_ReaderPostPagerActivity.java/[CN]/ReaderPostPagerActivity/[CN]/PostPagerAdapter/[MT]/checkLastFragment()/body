{
  if (mIsSinglePostView) {
    return;
  }
  boolean canRequestMore=!mAllPostsLoaded && mIdList.size() < ReaderConstants.READER_MAX_POSTS_TO_DISPLAY && NetworkUtils.isNetworkAvailable(ReaderPostPagerActivity.this);
  if (canRequestMore) {
    ensureLoadingPageExists();
  }
 else {
    ensureNoMorePageExists();
  }
}
