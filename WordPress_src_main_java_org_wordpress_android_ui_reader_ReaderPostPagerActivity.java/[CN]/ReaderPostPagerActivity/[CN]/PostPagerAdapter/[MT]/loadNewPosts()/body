{
  final Handler handler=new Handler();
  new Thread(){
    @Override public void run(){
      ReaderPostList posts=ReaderPostTable.getPostsWithTag(getCurrentTag(),ReaderConstants.READER_MAX_POSTS_TO_DISPLAY);
      if (posts.size() > 0) {
        final ReaderBlogIdPostIdList allIds=posts.getBlogIdPostIdList();
        handler.post(new Runnable(){
          @Override public void run(){
            replaceIds(allIds);
          }
        }
);
      }
    }
  }
.start();
}
