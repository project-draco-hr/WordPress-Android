{
  if (Build.VERSION.SDK_INT >= 15) {
    super.setUserVisibleHint(isVisibleToUser);
  }
  if (getView() != null) {
    TextView txtCheckmark=(TextView)getView().findViewById(R.id.text_checkmark);
    if (isVisibleToUser) {
      animateIn(txtCheckmark);
    }
 else {
      txtCheckmark.setVisibility(View.GONE);
    }
  }
}
