{
  for (int i=start; i < end; i++) {
    char c=text.charAt(i);
    if (c > 0x7E || c < ' ') {
      out.append("&#" + ((int)c) + ";");
    }
 else     if (c == ' ') {
      while (i + 1 < end && text.charAt(i + 1) == ' ') {
        out.append("&nbsp;");
        i++;
      }
      out.append(' ');
    }
 else {
      out.append(c);
    }
  }
}
