{
  if (result) {
    WordPress.postUploaded();
    nm.cancel(notificationID);
  }
 else {
    String postOrPage=(String)(post.isPage() ? context.getResources().getText(R.string.page_id) : context.getResources().getText(R.string.post_id));
    n.flags|=Notification.FLAG_AUTO_CANCEL;
    n.setLatestEventInfo(context,context.getResources().getText(R.string.upload_failed),postOrPage + " " + context.getResources().getText(R.string.upload_failed)+ ": "+ error,n.contentIntent);
    nm.notify(notificationID,n);
  }
}
