{
  String postContent;
  if (!getMt_text_more().equals("")) {
    if (isLocalDraft())     postContent=getDescription() + "\n&lt;!--more--&gt;\n" + getMt_text_more();
 else     postContent=getDescription() + "\n<!--more-->\n" + getMt_text_more();
  }
 else   postContent=getDescription();
  return postContent;
}
