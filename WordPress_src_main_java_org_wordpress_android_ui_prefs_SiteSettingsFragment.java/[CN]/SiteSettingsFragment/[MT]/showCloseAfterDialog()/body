{
  getNumberPickerDialog(true,R.string.close_after_switch_text,R.string.close_after_description,0,getResources().getInteger(R.integer.close_after_limit),mSiteSettings.getCloseAfter(),R.string.site_settings_close_after_title,new DialogInterface.OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      if (mSiteSettings.getCloseAfter() != mNumberPicker.getValue()) {
        onPreferenceChange(mCloseAfterPref,mNumberPicker.getValue());
      }
    }
  }
,null).show();
}
