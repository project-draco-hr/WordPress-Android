{
  getNumberPickerDialog(true,mSiteSettings.getPagingCount() > 0,R.string.site_settings_paging_title,R.string.paging_description,R.string.paging_header,0,getResources().getInteger(R.integer.paging_limit),mSiteSettings.getPagingCount(),R.string.site_settings_paging_title,new DialogInterface.OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      if (mSiteSettings.getPagingCount() != mNumberPicker.getValue()) {
        onPreferenceChange(mPagingPref,mNumberPicker.getValue());
      }
    }
  }
,null).show();
}
