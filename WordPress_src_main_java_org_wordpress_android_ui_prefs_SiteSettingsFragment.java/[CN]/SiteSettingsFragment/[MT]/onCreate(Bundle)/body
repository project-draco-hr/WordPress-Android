{
  super.onCreate(savedInstanceState);
  setRetainInstance(true);
  if (!NetworkUtils.checkConnection(getActivity())) {
    getActivity().finish();
  }
  mBlog=WordPress.getBlog(getArguments().getInt(BlogPreferencesActivity.ARG_LOCAL_BLOG_ID,-1));
  if (mBlog == null)   return;
  addPreferencesFromResource(R.xml.site_settings);
  mRemoteTitle="";
  mRemoteTagline="";
  mRemoteAddress="";
  mRemotePrivacy=1;
  mRemoteLanguage="";
  initPreferences();
  fetchRemoteData();
}
