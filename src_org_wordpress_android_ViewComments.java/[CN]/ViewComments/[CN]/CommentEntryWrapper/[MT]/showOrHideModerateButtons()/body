{
  int previousTotal=checkedCommentTotal;
  checkedCommentTotal=0;
  for (int i=0; i < checkedComments.size(); i++) {
    if (checkedComments.get(i).equals("true")) {
      checkedCommentTotal++;
    }
  }
  if (checkedCommentTotal > 0 && previousTotal == 0) {
    showModerationBar();
  }
  if (checkedCommentTotal == 0 && previousTotal > 0) {
    hideModerationBar();
  }
}
