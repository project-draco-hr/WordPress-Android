{
  HashMap<Integer,HashMap<?,?>> commentsResult;
  try {
    commentsResult=ApiHelper.refreshComments(getActivity().getApplicationContext(),commentParams);
  }
 catch (  XMLRPCException e) {
    if (!getActivity().isFinishing())     moderateErrorMsg=String.format(getResources().getString(R.string.error_refresh),getResources().getText(R.string.tab_comments));
    return null;
  }
  return commentsResult;
}
