{
  HashMap<String,HashMap<?,?>> commentsResult;
  try {
    commentsResult=ApiHelper.refreshComments(ViewComments.this,commentParams,loadMore);
  }
 catch (  XMLRPCException e) {
    if (!isFinishing())     AlertUtil.showAlert(ViewComments.this,R.string.error,e.getLocalizedMessage());
    return null;
  }
  return commentsResult;
}
