{
  if (mErrorImageResId != 0) {
    setImageResource(mErrorImageResId);
    return;
  }
switch (mImageType) {
case NONE:
    break;
case AVATAR:
  showDefaultGravatarImage();
break;
case BLAVATAR:
setImageResource(R.drawable.blavatar_placeholder);
break;
default :
setImageDrawable(new ColorDrawable(getColorRes(R.color.grey_lighten_30)));
break;
}
}
