{
switch (mImageType) {
case NONE:
    break;
case AVATAR:
  if (getContext() == null)   break;
new CircularizeBitmapTask().executeOnExecutor(AsyncTask.THREAD_POOL_EXECUTOR,BitmapFactory.decodeResource(getContext().getResources(),R.drawable.gravatar_placeholder));
break;
case SITE_AVATAR:
setImageResource(R.drawable.gravatar_placeholder);
break;
default :
setImageDrawable(new ColorDrawable(getColorRes(R.color.grey_medium)));
break;
}
}
