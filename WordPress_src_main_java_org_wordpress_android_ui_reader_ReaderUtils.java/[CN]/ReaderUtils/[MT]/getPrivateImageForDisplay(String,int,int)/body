{
  if (TextUtils.isEmpty(imageUrl)) {
    return "";
  }
  final String query;
  if (width > 0 && height > 0) {
    query=String.format("?w=%d&h=%d",width,height);
  }
 else   if (width > 0) {
    query=String.format("?w=%d",width);
  }
 else   if (height > 0) {
    query=String.format("?h=%d",height);
  }
 else {
    query="";
  }
  return UrlUtils.removeQuery(UrlUtils.makeHttps(imageUrl)) + query;
}
