{
  String[] args={Long.toString(personId),Integer.toString(localTableBlogId),Integer.toString(isFollower ? 1 : 0),Integer.toString(isViewer ? 1 : 0)};
  Cursor c=getReadableDb().rawQuery("SELECT * FROM " + PEOPLE_TABLE + " WHERE person_id=?1 AND local_blog_id=?2 AND is_follower=?3 AND is_viewer=?4",args);
  try {
    if (!c.moveToFirst()) {
      return null;
    }
    return getPersonFromCursor(c,localTableBlogId);
  }
  finally {
    SqlUtils.closeCursor(c);
  }
}
