{
  String[] args={Long.toString(personId),Integer.toString(localTableBlogId),Integer.toString(isFollower ? 1 : 0)};
  Cursor c=getReadableDb().rawQuery("SELECT * FROM " + PEOPLE_TABLE + " WHERE person_id=? AND local_blog_id=? AND is_follower=?",args);
  try {
    if (!c.moveToFirst()) {
      return null;
    }
    return getPersonFromCursor(c,localTableBlogId);
  }
  finally {
    SqlUtils.closeCursor(c);
  }
}
