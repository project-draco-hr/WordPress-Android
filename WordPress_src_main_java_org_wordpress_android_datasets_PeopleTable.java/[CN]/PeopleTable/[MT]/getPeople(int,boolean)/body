{
  List<Person> people=new ArrayList<>();
  String[] args={Integer.toString(localTableBlogId),Boolean.toString(isFollower)};
  Cursor c=getReadableDb().rawQuery("SELECT * FROM " + PEOPLE_TABLE + " WHERE local_blog_id=? AND is_follower=? ORDER BY lower(display_name), lower(user_name)",args);
  try {
    while (c.moveToNext()) {
      Person person=getPersonFromCursor(c,localTableBlogId);
      people.add(person);
    }
    return people;
  }
  finally {
    SqlUtils.closeCursor(c);
  }
}
