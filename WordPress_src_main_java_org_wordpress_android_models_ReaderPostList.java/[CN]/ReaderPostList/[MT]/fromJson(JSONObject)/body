{
  if (json == null)   throw new IllegalArgumentException("null json post list");
  ReaderPostList posts=new ReaderPostList();
  JSONArray jsonPosts=json.optJSONArray("posts");
  if (jsonPosts != null) {
    for (int i=0; i < jsonPosts.length(); i++)     posts.add(ReaderPost.fromJson(jsonPosts.optJSONObject(i)));
  }
  return posts;
}
