{
  if (mViewPager.getCurrentItem() > PAGE_CONTENT) {
    mViewPager.setCurrentItem(PAGE_CONTENT);
    supportInvalidateOptionsMenu();
    return;
  }
  if (getSupportActionBar() != null) {
    if (getSupportActionBar().isShowing())     showCancelAlert();
 else     if (mEditPostContentFragment != null)     mEditPostContentFragment.setContentEditingModeVisible(false);
  }
}
