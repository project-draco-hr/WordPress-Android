{
  mIsNew=true;
  mLocalDraft=true;
  mBlog=WordPress.getCurrentBlog();
  mBlogID=mBlog.getId();
  mAccountName=mBlog.getBlogName();
  WordPress.wpDB.updateLastBlogId(mBlogID);
  setTitle(StringUtils.unescapeHTML(mAccountName) + " - " + getResources().getText((mIsPage) ? R.string.new_page : R.string.new_post));
}
