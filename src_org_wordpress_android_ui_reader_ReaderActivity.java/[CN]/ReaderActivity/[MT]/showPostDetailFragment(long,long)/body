{
  FragmentTransaction ft=getSupportFragmentManager().beginTransaction().replace(R.id.fragment_container,ReaderPostDetailFragment.newInstance(this,blogId,postId),TAG_FRAGMENT_POST_DETAIL).setTransitionStyle(FragmentTransaction.TRANSIT_FRAGMENT_OPEN);
  if (getPostListFragment() != null)   ft.addToBackStack(TAG_FRAGMENT_POST_DETAIL);
  ft.commit();
}
