{
  getSupportFragmentManager().beginTransaction().add(R.id.fragment_container,ReaderPostDetailFragment.newInstance(this,blogId,postId),TAG_FRAGMENT_POST_DETAIL).addToBackStack(TAG_FRAGMENT_POST_DETAIL).setCustomAnimations(R.anim.slide_up,R.anim.slide_down,R.anim.slide_up,R.anim.slide_down).commit();
}
