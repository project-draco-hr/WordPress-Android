{
  Fragment listFragment=getPostListFragment();
  Fragment detailFragment=getPostDetailFragment();
  if (listFragment == null && detailFragment == null)   return;
  FragmentTransaction ft=getSupportFragmentManager().beginTransaction();
  if (listFragment != null)   ft.remove(listFragment);
  if (detailFragment != null)   ft.remove(detailFragment);
  ft.commit();
}
