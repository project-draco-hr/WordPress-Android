{
  super(context);
  this.setOrientation(VERTICAL);
  this.setPadding(4,4,4,4);
  tvTitle=new TextView(context);
  tvTitle.setText(title);
  tvTitle.setTextSize(20);
  tvTitle.setTextColor(Color.parseColor("#444444"));
  addView(tvTitle,new LinearLayout.LayoutParams(LayoutParams.FILL_PARENT,LayoutParams.WRAP_CONTENT));
  tvDate=new TextView(context);
  String customDate=date;
  tvDate.setText(customDate);
  addView(tvDate,new LinearLayout.LayoutParams(LayoutParams.FILL_PARENT,LayoutParams.WRAP_CONTENT));
}
