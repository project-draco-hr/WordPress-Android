{
  new AsyncTask<List<Uri>,Boolean,Void>(){
    @Override protected Void doInBackground(    List<Uri>... lists){
      for (      Uri mediaUri : mediaUris) {
        if (mediaUri == null) {
          publishProgress(false);
          continue;
        }
        if (!addMedia(mediaUri)) {
          publishProgress(false);
        }
      }
      return null;
    }
    @Override protected void onProgressUpdate(    Boolean... values){
      Toast.makeText(EditPostActivity.this,getResources().getText(R.string.gallery_error),Toast.LENGTH_SHORT).show();
    }
  }
.execute(mediaUris);
}
