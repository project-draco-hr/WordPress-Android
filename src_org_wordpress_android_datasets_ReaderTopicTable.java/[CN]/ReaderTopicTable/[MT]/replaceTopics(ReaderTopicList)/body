{
  if (topics == null || topics.size() == 0)   return;
  SQLiteDatabase db=ReaderDatabase.getWritableDb();
  db.beginTransaction();
  try {
    try {
      db.execSQL("DELETE FROM tbl_topics");
      addOrUpdateTopics(topics);
      db.setTransactionSuccessful();
    }
 catch (    SQLException e) {
      ReaderLog.e(e);
    }
  }
  finally {
    db.endTransaction();
  }
}
