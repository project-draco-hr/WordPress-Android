{
  if (topics == null || topics.size() == 0)   return;
  SQLiteStatement stmt=null;
  try {
    stmt=ReaderDatabase.getWritableDb().compileStatement("INSERT OR REPLACE INTO tbl_topics (" + COLUMN_NAMES + ") VALUES (?1,?2,?3)");
    for (    ReaderTopic topic : topics) {
      stmt.bindString(1,topic.getTopicName());
      stmt.bindString(2,topic.getEndpoint());
      stmt.bindLong(3,topic.topicType.toInt());
      stmt.execute();
      stmt.clearBindings();
    }
  }
  finally {
    SqlUtils.closeStatement(stmt);
  }
}
