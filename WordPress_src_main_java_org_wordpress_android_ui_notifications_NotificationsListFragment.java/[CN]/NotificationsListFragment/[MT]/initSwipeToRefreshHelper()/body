{
  mFauxSwipeToRefreshHelper=new SwipeToRefreshHelper(getActivity(),(CustomSwipeRefreshLayout)getActivity().findViewById(R.id.ptr_layout),new SwipeToRefreshHelper.RefreshListener(){
    @Override public void onRefreshStarted(){
      new Handler().postDelayed(new Runnable(){
        @Override public void run(){
          if (isAdded()) {
            mFauxSwipeToRefreshHelper.setRefreshing(false);
          }
        }
      }
,2000);
    }
  }
);
}
