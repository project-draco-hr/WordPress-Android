{
  mFauxPullToRefreshHelper=new PullToRefreshHelper(getActivity(),(SwipeRefreshLayout)getActivity().findViewById(R.id.ptr_layout),new PullToRefreshHelper.RefreshListener(){
    @Override public void onRefreshStarted(){
      new Handler().postDelayed(new Runnable(){
        @Override public void run(){
          if (isAdded()) {
            mFauxPullToRefreshHelper.setRefreshing(false);
          }
        }
      }
,2000);
    }
  }
);
}
