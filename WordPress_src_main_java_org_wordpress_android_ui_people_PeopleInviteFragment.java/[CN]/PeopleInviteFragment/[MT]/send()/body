{
  if (!isAdded()) {
    return;
  }
  enableSendButton(false);
  if (mUsernameEditText.getText().toString().length() > 0) {
    addUsername(mUsernameEditText,new ValidationEndListener(){
      @Override public void onValidationEnd(){
        if (!checkAndSend()) {
          enableSendButton(true);
        }
      }
    }
);
  }
 else {
    if (!checkAndSend()) {
      enableSendButton(true);
    }
  }
}
