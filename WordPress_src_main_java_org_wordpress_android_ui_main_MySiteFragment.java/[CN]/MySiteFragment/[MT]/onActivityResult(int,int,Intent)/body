{
  super.onActivityResult(requestCode,resultCode,data);
switch (requestCode) {
case RequestCodes.SITE_PICKER:
    if (resultCode == Activity.RESULT_OK) {
      setBlog(WordPress.getCurrentBlog());
    }
  break;
case RequestCodes.EDIT_POST:
if (resultCode == Activity.RESULT_OK && getView() != null && data != null && data.getBooleanExtra(EditPostActivity.EXTRA_SAVED_AS_LOCAL_DRAFT,false)) {
  showAlert(getView().findViewById(R.id.postsGlowBackground));
}
break;
case RequestCodes.CREATE_BLOG:
mBlog=WordPress.getCurrentBlog();
refreshBlogDetails();
break;
case RequestCodes.BLOG_SETTINGS:
if (resultCode == Activity.RESULT_FIRST_USER) {
Blog currentBlog=WordPress.getCurrentBlog();
if (currentBlog == null) {
setBlog(null);
refreshBlogDetails();
}
 else {
ActivityLauncher.showSitePickerForResult(getActivity(),currentBlog.getLocalTableBlogId());
}
}
}
}
