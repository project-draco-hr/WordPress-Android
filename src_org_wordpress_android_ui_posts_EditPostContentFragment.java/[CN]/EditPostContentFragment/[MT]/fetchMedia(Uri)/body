{
  if (!MediaUtils.isInMediaStore(mediaUri)) {
    if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.HONEYCOMB)     new DownloadMediaTask().executeOnExecutor(AsyncTask.THREAD_POOL_EXECUTOR,mediaUri);
 else     new DownloadMediaTask().execute(mediaUri);
  }
 else {
    if (!addMedia(mediaUri,null))     Toast.makeText(getActivity(),getResources().getText(R.string.gallery_error),Toast.LENGTH_SHORT).show();
  }
}
