{
switch (imageType) {
case PHOTO_FULL:
    setImageDrawable(null);
  break;
case AVATAR:
setImageResource(R.drawable.placeholder);
break;
case MSHOT:
setImageDrawable(new ColorDrawable(getColorRes(R.color.grey_light)));
break;
default :
setImageDrawable(new ColorDrawable(getColorRes(R.color.grey_medium)));
break;
}
}
