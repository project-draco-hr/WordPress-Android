{
  try {
    URL url=new URL(imgUrl);
    InputStream is=null;
    try {
      is=(InputStream)url.getContent();
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
    if (is != null) {
      Drawable d=Drawable.createFromStream(is,"src");
      return d;
    }
 else {
      return null;
    }
  }
 catch (  MalformedURLException e) {
    e.printStackTrace();
    return null;
  }
}
