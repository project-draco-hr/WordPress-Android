{
  try {
    URL url=new URL(imgUrl);
    InputStream is=(InputStream)url.getContent();
    Drawable d=Drawable.createFromStream(is,"src");
    return d;
  }
 catch (  MalformedURLException e) {
    e.printStackTrace();
    return null;
  }
catch (  IOException e) {
    e.printStackTrace();
    return null;
  }
}
