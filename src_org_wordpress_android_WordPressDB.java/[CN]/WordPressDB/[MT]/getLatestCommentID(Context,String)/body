{
  db=ctx.openOrCreateDatabase(DATABASE_NAME,0,null);
  int returnInt=0;
  Cursor c=db.query(SETTINGS_TABLE,new String[]{"lastCommentId"},"id=" + id,null,null,null,null);
  c.moveToFirst();
