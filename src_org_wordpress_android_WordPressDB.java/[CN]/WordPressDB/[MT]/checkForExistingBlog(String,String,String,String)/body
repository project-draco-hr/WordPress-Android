{
  if (blogName == null || blogURL == null || username == null || password == null)   return false;
  String selection="blogName='" + addSlashes(blogName) + "' AND url='"+ addSlashes(blogURL)+ "'"+ " AND username='"+ username+ "'";
  Cursor c=db.query(SETTINGS_TABLE,new String[]{"id","blogName","url"},selection,null,null,null,null);
  int numRows=c.getCount();
  if (numRows > 0) {
    c.moveToFirst();
    long blogID=c.getLong(0);
    ContentValues values=new ContentValues();
    values.put("password",encryptPassword(password));
    db.update(SETTINGS_TABLE,values,"id=" + blogID,null);
    return true;
  }
  c.close();
  return false;
}
