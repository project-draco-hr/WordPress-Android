        int numRows=c.getCount();
        c.moveToFirst();
        for (int i=0; i < numRows; ++i) {
          if (c.getString(0) != null) {
            Post post=new Post(c.getInt(0),c.getString(1),c.getString(2),c.getString(3),c.getLong(4),c.getString(5),c.getString(6),c.getString(7),c.getString(8),c.getDouble(9),c.getDouble(10),false,"",ctx,false);
