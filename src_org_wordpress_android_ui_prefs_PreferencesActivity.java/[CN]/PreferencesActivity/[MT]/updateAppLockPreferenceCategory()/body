{
  AppLockManager appLockManager=AppLockManager.getInstance();
  if (appLockManager.isAppLockFeatureEnabled() == false)   return;
  Preference passcodeLockPreference=(Preference)findPreference("wp_pref_passlock_enabled");
  if (passcodeLockPreference == null)   return;
  if (appLockManager.getCurrentAppLock().isPasswordLocked())   passcodeLockPreference.setTitle("Turn passcode off");
 else   passcodeLockPreference.setTitle("Turn passcode on");
}
