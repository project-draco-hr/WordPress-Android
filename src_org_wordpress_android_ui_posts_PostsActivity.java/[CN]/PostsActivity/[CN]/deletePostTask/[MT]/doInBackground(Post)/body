{
  boolean result;
  post=params[0];
  Blog blog=WordPress.currentBlog;
  XMLRPCClientInterface client=XMLRPCFactory.instantiate(blog.getUri(),blog.getHttpuser(),blog.getHttppassword());
  Object[] postParams={"",post.getRemotePostId(),WordPress.currentBlog.getUsername(),WordPress.currentBlog.getPassword()};
  Object[] pageParams={WordPress.currentBlog.getRemoteBlogId(),WordPress.currentBlog.getUsername(),WordPress.currentBlog.getPassword(),post.getRemotePostId()};
  try {
    client.call((mIsPage) ? "wp.deletePage" : "blogger.deletePost",(mIsPage) ? pageParams : postParams);
    result=true;
  }
 catch (  final XMLRPCException e) {
    mErrorMsg=String.format(getResources().getString(R.string.error_delete_post),(mIsPage) ? getResources().getText(R.string.page) : getResources().getText(R.string.post));
    result=false;
  }
  return result;
}
