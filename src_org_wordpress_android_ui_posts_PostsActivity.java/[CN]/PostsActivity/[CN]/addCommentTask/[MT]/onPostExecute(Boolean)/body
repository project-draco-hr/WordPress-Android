{
  dismissDialog(ID_DIALOG_COMMENT);
  attemptToSelectPost();
  if (result) {
    Toast.makeText(PostsActivity.this,getResources().getText(R.string.comment_added),Toast.LENGTH_SHORT).show();
    checkForLocalChanges(false);
  }
 else {
    Toast.makeText(PostsActivity.this,getResources().getText(R.string.connection_error),Toast.LENGTH_SHORT).show();
    Intent i=new Intent(PostsActivity.this,AddCommentActivity.class);
    i.putExtra("postID",postid);
    i.putExtra("comment",comment);
    startActivityForResult(i,ACTIVITY_ADD_COMMENT);
  }
}
