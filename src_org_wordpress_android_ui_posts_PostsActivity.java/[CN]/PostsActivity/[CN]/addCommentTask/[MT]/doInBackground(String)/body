{
  boolean result=false;
  postid=params[0];
  comment=params[1];
  XMLRPCClient client=new XMLRPCClient(WordPress.currentBlog.getUrl(),WordPress.currentBlog.getHttpuser(),WordPress.currentBlog.getHttppassword());
  Map<String,Object> commentHash=new HashMap<String,Object>();
  commentHash.put("content",comment);
  commentHash.put("author","");
  commentHash.put("author_url","");
  commentHash.put("author_email","");
  Object[] commentParams={WordPress.currentBlog.getBlogId(),WordPress.currentBlog.getUsername(),WordPress.currentBlog.getPassword(),Integer.valueOf(postid),commentHash};
  try {
    int newCommentID=(Integer)client.call("wp.newComment",commentParams);
    if (newCommentID >= 0) {
      WordPress.wpDB.updateLatestCommentID(WordPress.currentBlog.getId(),newCommentID);
      result=true;
    }
  }
 catch (  final XMLRPCException e) {
    mErrorMsg=getResources().getText(R.string.error_generic).toString();
    result=false;
  }
  return result;
}
