{
  Object[] commentParams={WordPress.currentBlog.getBlogId(),WordPress.currentBlog.getUsername(),WordPress.currentBlog.getPassword()};
  try {
    ApiHelper.refreshComments(PostsActivity.this,commentParams);
  }
 catch (  final XMLRPCException e) {
    errorMsg=getResources().getText(R.string.error_generic).toString();
  }
  return null;
}
