{
  runOnUiThread(new Runnable(){
    @Override public void run(){
      if (start) {
        attemptToSelectPost();
        shouldAnimateRefreshButton=true;
        startAnimatingRefreshButton(refreshMenuItem);
        isRefreshing=true;
      }
 else {
        stopAnimatingRefreshButton(refreshMenuItem);
        isRefreshing=false;
      }
    }
  }
);
}
