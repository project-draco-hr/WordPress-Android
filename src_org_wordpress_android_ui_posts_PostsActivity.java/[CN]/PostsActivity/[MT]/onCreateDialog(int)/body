{
  mLoadingDialog=new ProgressDialog(this);
  if (id == ID_DIALOG_DELETING) {
    mLoadingDialog.setMessage(getResources().getText(mIsPage ? R.string.deleting_page : R.string.deleting_post));
    mLoadingDialog.setCancelable(false);
    return mLoadingDialog;
  }
 else   if (id == ID_DIALOG_SHARE) {
    mLoadingDialog.setMessage(mIsPage ? getString(R.string.share_url_page) : getString(R.string.share_url_post));
    mLoadingDialog.setCancelable(false);
    return mLoadingDialog;
  }
  return super.onCreateDialog(id);
}
