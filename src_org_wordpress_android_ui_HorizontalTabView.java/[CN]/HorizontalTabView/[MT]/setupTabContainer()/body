{
  mTabContainer=new LinearLayout(getContext());
  HorizontalScrollView.LayoutParams linearLayoutParams=new HorizontalScrollView.LayoutParams(HorizontalScrollView.LayoutParams.WRAP_CONTENT,HorizontalScrollView.LayoutParams.WRAP_CONTENT);
  mTabContainer.setLayoutParams(linearLayoutParams);
  mTabContainer.setOrientation(LinearLayout.HORIZONTAL);
  addView(mTabContainer);
}
