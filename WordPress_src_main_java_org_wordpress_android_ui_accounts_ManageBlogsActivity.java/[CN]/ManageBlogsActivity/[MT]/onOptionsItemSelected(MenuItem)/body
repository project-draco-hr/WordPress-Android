{
  int itemId=item.getItemId();
  if (itemId == R.id.menu_show_all) {
    selectAll();
    return true;
  }
 else   if (itemId == R.id.menu_hide_all) {
    deselectAll();
    return true;
  }
 else   if (itemId == android.R.id.home) {
    finish();
    return true;
  }
  return super.onOptionsItemSelected(item);
}
