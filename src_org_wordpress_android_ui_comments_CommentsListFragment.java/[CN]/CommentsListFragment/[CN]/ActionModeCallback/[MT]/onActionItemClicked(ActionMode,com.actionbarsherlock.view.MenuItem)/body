{
switch (menuItem.getItemId()) {
case R.id.menu_approve:
    if (moderateSelectedComments(CommentStatus.APPROVED))     actionMode.finish();
  return true;
case R.id.menu_unapprove:
if (moderateSelectedComments(CommentStatus.UNAPPROVED)) actionMode.finish();
return true;
case R.id.menu_spam:
if (moderateSelectedComments(CommentStatus.SPAM)) actionMode.finish();
return true;
case R.id.menu_trash:
if (deleteSelectedComments()) actionMode.finish();
return true;
default :
return false;
}
}
