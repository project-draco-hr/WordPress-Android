{
  mIsRetrievingComments=false;
  if (!hasActivity())   return;
  if (isLoadingMore) {
    hideLoadingProgress();
  }
 else {
    mOnAnimateRefreshButton.onAnimateRefreshButton(false);
  }
  showOrHideModerationBar();
  if (isCancelled())   return;
  mCanLoadMoreComments=(commentsResult != null && commentsResult.size() > 0);
  if (commentsResult == null) {
    if (isError && !getActivity().isFinishing())     ToastUtils.showToast(getActivity(),R.string.error_refresh_comments,ToastUtils.Duration.LONG);
    return;
  }
  if (commentsResult.size() > 0)   getCommentAdapter().loadComments();
}
