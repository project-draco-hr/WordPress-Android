{
  if (button == 0) {
    prevPost.setEnabled(enabled);
    if (enabled)     prevPost.setAlpha(navButtonEnabled);
 else     prevPost.setAlpha(navButtonDisabled);
  }
 else   if (button == 1) {
    nextPost.setEnabled(enabled);
    if (enabled)     nextPost.setAlpha(navButtonEnabled);
 else     nextPost.setAlpha(navButtonDisabled);
  }
}
