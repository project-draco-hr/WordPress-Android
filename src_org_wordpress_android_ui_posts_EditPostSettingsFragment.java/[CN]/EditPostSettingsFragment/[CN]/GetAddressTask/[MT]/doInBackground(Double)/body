{
  latitude=args[0];
  longitude=args[1];
  if (!Geocoder.isPresent())   return null;
  Geocoder gcd=new Geocoder(getActivity(),Locale.getDefault());
  List<Address> addresses;
  try {
    addresses=gcd.getFromLocation(latitude,longitude,1);
    if (addresses == null || addresses.size() == 0)     return null;
    String locality="", adminArea="", country="";
    if (addresses.get(0).getLocality() != null)     locality=addresses.get(0).getLocality();
    if (addresses.get(0).getAdminArea() != null)     adminArea=addresses.get(0).getAdminArea();
    if (addresses.get(0).getCountryName() != null)     country=addresses.get(0).getCountryName();
    return ((locality.equals("")) ? locality : locality + ", ") + ((adminArea.equals("")) ? adminArea : adminArea + " ") + country;
  }
 catch (  IOException e) {
    e.printStackTrace();
    return null;
  }
}
