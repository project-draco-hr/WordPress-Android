{
  if (context == null)   return 0;
  TypedValue tv=new TypedValue();
  if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.HONEYCOMB) {
    if (context.getTheme().resolveAttribute(android.R.attr.actionBarSize,tv,true))     return TypedValue.complexToDimensionPixelSize(tv.data,context.getResources().getDisplayMetrics());
  }
 else   if (context.getTheme().resolveAttribute(com.actionbarsherlock.R.attr.actionBarSize,tv,true)) {
    return TypedValue.complexToDimensionPixelSize(tv.data,context.getResources().getDisplayMetrics());
  }
  return 0;
}
