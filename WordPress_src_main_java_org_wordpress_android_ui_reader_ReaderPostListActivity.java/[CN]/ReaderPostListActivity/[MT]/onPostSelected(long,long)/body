{
  if (!this.hasWindowFocus()) {
    AppLog.w(T.READER,"reader post list > post selected when activity not focused");
    return;
  }
  AnalyticsTracker.track(AnalyticsTracker.Stat.READER_OPENED_ARTICLE);
  ReaderPostListFragment listFragment=getListFragment();
  if (listFragment != null) {
switch (getPostListType()) {
case TAG_FOLLOWED:
case TAG_PREVIEW:
      ReaderActivityLauncher.showReaderPostPagerForTag(this,listFragment.getCurrentTag(),getPostListType(),blogId,postId);
    break;
case BLOG_PREVIEW:
  ReaderActivityLauncher.showReaderPostPagerForBlog(this,blogId,postId);
break;
}
}
}
