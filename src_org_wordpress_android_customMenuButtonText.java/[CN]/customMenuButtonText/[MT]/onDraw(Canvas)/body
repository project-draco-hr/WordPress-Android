{
  if (isFocused()) {
    setBackgroundDrawable(getResources().getDrawable(R.drawable.menu_button_bg));
  }
 else {
    if (isPressed()) {
      setBackgroundDrawable(getResources().getDrawable(R.drawable.menu_button_bg));
    }
 else {
      setBackgroundDrawable(null);
    }
  }
  super.onDraw(canvas);
}
