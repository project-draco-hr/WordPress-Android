{
  super.onResume();
  if (WordPress.currentPost != null && !getView().isLayoutRequested()) {
    loadPost(WordPress.currentPost);
  }
  parentActivity=(PostsActivity)getActivity();
  LocalBroadcastManager.getInstance(getActivity().getApplicationContext()).registerReceiver(mReceiver,new IntentFilter(SuggestionService.ACTION_SUGGESTIONS_LIST_UPDATED));
}
