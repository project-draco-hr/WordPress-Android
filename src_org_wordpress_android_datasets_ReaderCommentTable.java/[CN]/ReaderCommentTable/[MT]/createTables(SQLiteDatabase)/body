{
  db.execSQL("CREATE TABLE tbl_comments (" + " blog_id             INTEGER DEFAULT 0," + " post_id             INTEGER DEFAULT 0,"+ "	comment_id		    INTEGER DEFAULT 0,"+ " parent_id           INTEGER DEFAULT 0,"+ "	author_name	        TEXT,"+ " author_avatar       TEXT,"+ "	author_url	        TEXT,"+ " author_id           INTEGER DEFAULT 0,"+ " author_blog_id      INTEGER DEFAULT 0,"+ " published           TEXT,"+ " timestamp           INTEGER DEFAULT 0,"+ " status              TEXT,"+ " text                TEXT,"+ " PRIMARY KEY (blog_id, post_id, comment_id))");
}
