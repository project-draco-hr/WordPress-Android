{
  super.onPause();
  unregisterReceiver();
  if (isAnimatingRefreshButton) {
    isAnimatingRefreshButton=false;
  }
  if (mShouldFinish) {
    overridePendingTransition(0,0);
    finish();
  }
  if (mScrollPositionManager != null) {
    mScrollPositionManager.saveToPreferences(this,SCROLL_POSITION_ID);
  }
}
