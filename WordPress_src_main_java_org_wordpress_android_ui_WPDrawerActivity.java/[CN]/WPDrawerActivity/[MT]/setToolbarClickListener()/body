{
  getToolbar().setNavigationOnClickListener(new View.OnClickListener(){
    @Override public void onClick(    View v){
      if (isFinishing())       return;
      FragmentManager fm=getFragmentManager();
      if (fm.getBackStackEntryCount() > 0) {
        fm.popBackStack();
      }
 else {
        toggleDrawer();
      }
    }
  }
);
}
