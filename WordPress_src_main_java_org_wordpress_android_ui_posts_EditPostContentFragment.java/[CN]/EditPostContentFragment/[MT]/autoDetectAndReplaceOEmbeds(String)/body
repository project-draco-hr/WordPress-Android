{
  OEmbedUtils.autoEmbedUrl(text,new Callback(){
    @Override public void onSuccess(    String inputUrl,    String output){
      String currentText=mContentEditText.getText().toString();
      currentText=currentText.replace(inputUrl,output);
      mContentEditText.setText(WPHtml.fromHtml(StringUtils.addPTags(currentText),getActivity(),mActivity.getPost(),getMaximumThumbnailWidth()));
    }
    @Override public void onFailure(    Throwable t){
      AppLog.e(T.POSTS,t);
    }
  }
);
}
