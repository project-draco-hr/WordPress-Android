{
  AlertDialog.Builder builder=new AlertDialog.Builder(context);
  builder.setTitle(R.string.dlg_title_confirm_clear_saved_searches).setMessage(R.string.dlg_text_confirm_clear_saved_searches).setCancelable(true).setNegativeButton(R.string.no,null).setPositiveButton(R.string.yes,new DialogInterface.OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int id){
      clearSavedSearches();
    }
  }
);
  AlertDialog alert=builder.create();
  alert.show();
}
