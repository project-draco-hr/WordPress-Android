{
  String newImageUrl=ReaderUtils.getResizedImageUrl(imageUrl,width,height,mPost.isPrivate);
  if (height > 0) {
    return String.format("<img class='%s' src='%s' width='%d' height='%d' />",className,newImageUrl,pxToDp(width),pxToDp(height));
  }
 else {
    return String.format("<img class='%s' src='%s' width='%d' />",className,newImageUrl,pxToDp(width));
  }
}
