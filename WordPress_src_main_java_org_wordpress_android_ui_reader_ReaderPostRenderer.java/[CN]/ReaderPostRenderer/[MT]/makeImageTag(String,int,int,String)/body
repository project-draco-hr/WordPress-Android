{
  String newImageUrl=ReaderUtils.getResizedImageUrl(imageUrl,width,height,mPost.isPrivate);
  if (height > 0) {
    return new StringBuilder("<img class='").append(imageClass).append("'").append(" src='").append(newImageUrl).append("'").append(" width='").append(pxToDp(width)).append("'").append(" height='").append(pxToDp(height)).append("' />").toString();
  }
 else {
    return new StringBuilder("<img class='").append(imageClass).append("'").append("src='").append(newImageUrl).append("'").append(" width='").append(pxToDp(width)).append("' />").toString();
  }
}
