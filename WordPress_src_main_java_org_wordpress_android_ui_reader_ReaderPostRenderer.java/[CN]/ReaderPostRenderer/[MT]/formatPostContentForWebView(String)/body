    sbHtml.append("  iframe, embed { width: ").append(pxToDp(mResourceVars.videoWidthPx)).append("px !important;").append("                  height: ").append(pxToDp(mResourceVars.videoHeightPx)).append("px !important; }");
  }
 else {
    sbHtml.append("  iframe, embed { display: none; }");
  }
  sbHtml.append("  img { max-width: 100%; height: auto; }");
  sbHtml.append("  img.size-full, img.size-large { display: block;").append("     background-color ").append(mResourceVars.greyExtraLightStr).append(";").append("     margin-bottom: ").append(mResourceVars.marginSmallPx).append("px; }");
