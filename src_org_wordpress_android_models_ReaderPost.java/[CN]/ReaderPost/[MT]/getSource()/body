{
  String source;
  if (hasBlogName() && hasAuthorName()) {
    if (authorName.equalsIgnoreCase(blogName)) {
      source=blogName;
    }
 else {
      source=blogName + SOURCE_SEP + authorName;
    }
  }
 else   if (hasAuthorName()) {
    source=authorName;
  }
 else   if (hasBlogName()) {
    source=blogName;
  }
 else {
    source="";
  }
  return source + SOURCE_SEP + DateTimeUtils.javaDateToTimeSpan(getDatePublished());
}
