{
  Geocoder gcd=new Geocoder(editPost.this,Locale.getDefault());
  String finalText="";
  List<Address> addresses;
  try {
    addresses=gcd.getFromLocation(args[0],args[1],1);
    if (addresses.size() > 0) {
      finalText=addresses.get(0).getLocality() + ", " + addresses.get(0).getAdminArea();
    }
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  return finalText;
}
