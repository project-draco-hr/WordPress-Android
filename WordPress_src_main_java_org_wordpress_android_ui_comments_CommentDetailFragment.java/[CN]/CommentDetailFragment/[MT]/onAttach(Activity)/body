{
  super.onAttach(activity);
  if (activity instanceof OnCommentChangeListener)   mOnCommentChangeListener=(OnCommentChangeListener)activity;
  if (activity instanceof OnPostClickListener)   mOnPostClickListener=(OnPostClickListener)activity;
  if (activity instanceof OnCommentActionListener)   mOnCommentActionListener=(OnCommentActionListener)activity;
  if (activity instanceof OnNoteCommentActionListener)   mOnNoteCommentActionListener=(OnNoteCommentActionListener)activity;
}
