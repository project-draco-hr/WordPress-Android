{
  FragmentManager fm=getSupportFragmentManager();
  mNavFragment=(DialogFragment)fm.findFragmentByTag(StatsNavDialogFragment.TAG);
  if (mNavFragment == null)   mNavFragment=StatsNavDialogFragment.newInstance(mNavPosition);
  if (!mNavFragment.isVisible())   mNavFragment.show(getSupportFragmentManager(),StatsNavDialogFragment.TAG);
}
