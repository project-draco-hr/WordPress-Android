{
  return new View.OnClickListener(){
    @Override public void onClick(    View v){
      DialogUtils dialogUtils=DialogUtils.newInstance(MyProfileActivity.this,dialogTitle,textView.getText().toString(),hint,isMultiline,new DialogUtils.Callback(){
        @Override public void onSuccessfulInput(        String input){
          updateLabel(textView,input);
          updateMyProfileForLabel(textView);
        }
      }
);
      dialogUtils.show(getFragmentManager(),DIALOG_TAG);
    }
  }
;
}
