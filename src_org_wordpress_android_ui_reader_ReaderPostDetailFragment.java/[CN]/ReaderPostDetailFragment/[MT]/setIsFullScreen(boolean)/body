{
  if (isFullScreen == mIsFullScreen || !ReaderActivity.isFullScreenSupported())   return;
  ActionBar actionBar=getActionBar();
  if (actionBar == null)   return;
  if (mPost.isWP())   animateIconBar(!isFullScreen);
  if (isFullScreen) {
    actionBar.hide();
  }
 else {
    actionBar.show();
  }
  mIsFullScreen=isFullScreen;
}
