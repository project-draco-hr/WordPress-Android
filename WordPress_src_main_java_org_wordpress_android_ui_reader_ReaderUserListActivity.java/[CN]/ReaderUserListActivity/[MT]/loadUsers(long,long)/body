{
  new Thread(){
    @Override public void run(){
      final String title=getTitleString(blogId,postId);
      final TextView txtTitle=(TextView)findViewById(R.id.text_title);
      final ReaderUserList users=ReaderUserTable.getUsersWhoLikePost(blogId,postId,ReaderConstants.READER_MAX_USERS_TO_DISPLAY);
      runOnUiThread(new Runnable(){
        @Override public void run(){
          if (!isFinishing()) {
            txtTitle.setText(title);
            getAdapter().setUsers(users);
          }
        }
      }
);
    }
  }
.start();
}
