{
  if (title != null) {
    mNotificationBuilder.setContentTitle(title);
  }
  if (message != null) {
    mNotificationBuilder.setContentText(message);
  }
  if (icon != null) {
    mNotificationBuilder.setLargeIcon(icon);
  }
  mNotificationManager.notify(mNotificationId,mNotificationBuilder.build());
}
