{
  if (mCurrentBlogId == 0)   return;
  ReaderBlogInfo blogInfo=ReaderBlogTable.getBlogInfo(mCurrentBlogId);
  if (blogInfo != null) {
    showBlogInfo(blogInfo);
  }
 else {
    showBlogInfo(null);
  }
  ReaderBlogActions.updateBlogInfo(mCurrentBlogId,new ReaderActions.ActionListener(){
    @Override public void onActionResult(    boolean succeeded){
      if (!hasActivity())       return;
      if (succeeded)       showBlogInfo(ReaderBlogTable.getBlogInfo(mCurrentBlogId));
    }
  }
);
}
