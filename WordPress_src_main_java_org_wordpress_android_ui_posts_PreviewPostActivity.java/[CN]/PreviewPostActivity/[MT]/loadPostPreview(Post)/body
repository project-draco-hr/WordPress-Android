{
  if (post != null) {
    String url=post.getPermaLink();
    if (WordPress.getCurrentBlog().isPrivate() || post.isLocalDraft() || post.isLocalChange()|| post.getStatusEnum() != PostStatus.PUBLISHED) {
      if (-1 == url.indexOf('?')) {
        url=url.concat("?preview=true");
      }
 else {
        url=url.concat("&preview=true");
      }
      loadAuthenticatedUrl(url);
    }
 else {
      loadUrl(url);
    }
  }
}
