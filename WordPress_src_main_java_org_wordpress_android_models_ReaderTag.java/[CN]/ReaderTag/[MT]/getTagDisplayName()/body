{
  if (!TextUtils.isEmpty(tagTitle)) {
    return tagTitle;
  }
  if (TextUtils.isEmpty(tagSlug)) {
    return "";
  }
  if (Character.isUpperCase(tagSlug.charAt(0))) {
    return tagSlug;
  }
  if (tagSlug.length() > 1 && Character.isLowerCase(tagSlug.charAt(0)) && Character.isUpperCase(tagSlug.charAt(1))) {
    return tagSlug;
  }
  return StringUtils.capitalize(tagSlug);
}
