{
  mPullToRefreshHelper=new PullToRefreshHelper(getActivity(),(SwipeRefreshLayout)getActivity().findViewById(R.id.ptr_layout),new RefreshListener(){
    @Override public void onRefreshStarted(){
      if (getActivity() == null || !NetworkUtils.checkConnection(getActivity())) {
        mPullToRefreshHelper.setRefreshing(false);
        return;
      }
      refreshPosts((PostsActivity)getActivity());
    }
  }
);
}
