{
  mSwipeToRefreshHelper=new SwipeToRefreshHelper(getActivity(),(SwipeRefreshLayout)getView().findViewById(R.id.ptr_layout),new RefreshListener(){
    @Override public void onRefreshStarted(){
      if (!isAdded()) {
        return;
      }
      if (!NetworkUtils.checkConnection(getActivity())) {
        mSwipeToRefreshHelper.setRefreshing(false);
        updateEmptyView(EmptyViewMessageType.NETWORK_ERROR);
        return;
      }
      mSwipedToRefresh=true;
      refreshPosts((PostsActivity)getActivity());
    }
  }
);
}
