{
  ReaderActions.UpdateResultListener listener=new ReaderActions.UpdateResultListener(){
    @Override public void onUpdateResult(    ReaderActions.UpdateResult result){
      if (!isFinishing() && result == ReaderActions.UpdateResult.CHANGED) {
        getPageAdapter().refreshBlogs(ReaderBlogType.FOLLOWED);
      }
    }
  }
;
  ReaderBlogActions.updateFollowedBlogs(listener);
}
