{
  final int DEFAULT_WIDTH=600;
  int width;
  if (targetWidth != 0) {
    width=targetWidth;
  }
 else {
    if (context == null) {
      return DEFAULT_WIDTH;
    }
    Point size=DisplayUtils.getDisplayPixelSize(context);
    width=size.x;
    if (size.y < width) {
      width=size.y;
    }
  }
  return width;
}
