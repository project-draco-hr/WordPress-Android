{
  db.execSQL("CREATE TABLE " + COMMENTS_TABLE + " ("+ "   blog_id       INTEGER DEFAULT 0,"+ "   post_id       INTEGER DEFAULT 0,"+ "   comment_id   INTEGER DEFAULT 0,"+ "   author       TEXT,"+ "   comment      TEXT,"+ "   commentDate  TEXT,"+ "   commentDateFormatted TEXT,"+ "   status       TEXT,"+ "   url          TEXT,"+ "   email        TEXT,"+ "   postTitle    TEXT,"+ " PRIMARY KEY (blog_id, post_id, comment_id)"+ " );");
