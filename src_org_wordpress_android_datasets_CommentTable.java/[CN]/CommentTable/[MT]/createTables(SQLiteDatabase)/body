{
  db.execSQL("CREATE TABLE " + COMMENTS_TABLE + " ("+ "   blog_id      INTEGER DEFAULT 0,"+ "   post_id      INTEGER DEFAULT 0,"+ "   comment_id   INTEGER DEFAULT 0,"+ "   comment      TEXT,"+ "   commentDate  TEXT,"+ "   commentDateFormatted TEXT,"+ "   status       TEXT,"+ "   author_name  TEXT,"+ "   author_url   TEXT,"+ "   author_email TEXT,"+ "   post_title   TEXT,"+ " PRIMARY KEY (blog_id, post_id, comment_id)"+ " );");
