{
  if (json == null)   throw new IllegalArgumentException("null json comment list");
  ReaderCommentList comments=new ReaderCommentList();
  JSONArray jsonComments=json.optJSONArray("comments");
  if (jsonComments != null) {
    for (int i=0; i < jsonComments.length(); i++)     comments.add(ReaderComment.fromJson(jsonComments.optJSONObject(i),blogId));
  }
  return comments;
}
