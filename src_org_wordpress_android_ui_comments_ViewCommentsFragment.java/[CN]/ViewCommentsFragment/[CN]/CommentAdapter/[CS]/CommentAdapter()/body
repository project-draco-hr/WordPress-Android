{
  super(getActivity().getApplicationContext(),R.layout.comment_row,model);
  sdk_version=android.os.Build.VERSION.SDK_INT;
  FragmentManager fm=getActivity().getSupportFragmentManager();
  ViewCommentFragment f=(ViewCommentFragment)fm.findFragmentById(R.id.commentDetail);
  if (f != null && f.isInLayout())   detailViewVisible=true;
}
