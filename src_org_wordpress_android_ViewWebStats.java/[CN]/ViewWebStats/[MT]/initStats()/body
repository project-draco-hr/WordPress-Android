{
  titleBar.startRotatingRefreshIcon();
  Blog blog=WordPress.currentBlog;
  int blogid=blog.getBlogId();
  if (blogid == 1 && blog.getApi_blogid() == null) {
    this.checkAPIBlogInfo();
  }
 else   if (!blog.isDotcomFlag() && blog.getDotcom_username() == null) {
    this.showLoginForm();
  }
 else {
    this.loadStats();
  }
}
