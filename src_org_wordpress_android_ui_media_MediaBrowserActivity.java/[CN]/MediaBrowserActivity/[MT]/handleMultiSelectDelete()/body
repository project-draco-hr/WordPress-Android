{
  Builder builder=new AlertDialog.Builder(this).setMessage(R.string.confirm_delete_multi_media).setCancelable(true).setPositiveButton(R.string.delete,new OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      ArrayList<String> ids=mMediaGridFragment.getCheckedItems();
      onDeleteMedia(ids);
      mMediaGridFragment.refreshSpinnerAdapter();
    }
  }
).setNegativeButton(R.string.cancel,null);
  AlertDialog dialog=builder.create();
  dialog.show();
}
