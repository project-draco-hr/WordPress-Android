{
  if (videoView == null) {
    videoView=new VideoView(mRootLayout.getContext());
    FrameLayout.LayoutParams layoutParams=new FrameLayout.LayoutParams(ViewGroup.LayoutParams.MATCH_PARENT,DisplayUtils.dpToPx(mRootLayout.getContext(),220));
    layoutParams.setMargins(0,0,0,DisplayUtils.dpToPx(mRootLayout.getContext(),16));
    videoView.setLayoutParams(layoutParams);
    mRootLayout.addView(videoView);
  }
  return videoView;
}
