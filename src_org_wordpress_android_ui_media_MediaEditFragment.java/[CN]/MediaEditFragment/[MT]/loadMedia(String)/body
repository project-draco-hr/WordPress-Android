{
  mMediaId=mediaId;
  Blog blog=WordPress.getCurrentBlog();
  if (blog != null && getActivity() != null) {
    String blogId=String.valueOf(blog.getLocalTableBlogId());
    Cursor cursor=null;
    if (mMediaId != null) {
      cursor=WordPress.wpDB.getMediaFile(blogId,mMediaId);
      refreshViews(cursor);
      cursor.close();
    }
 else {
      refreshViews(null);
    }
  }
}
