  db.execSQL("CREATE TABLE tbl_attachments (" + "	post_id		        INTEGER," + " blog_id             INTEGER,"+ " attachment_id       INTEGER,"+ " url                 TEXT NOT NULL,"+ " mime_type           TEXT NOT NULL,"+ " width               INTEGER DEFAULT 0,"+ " height              INTEGER DEFAULT 0,"+ " PRIMARY KEY (post_id, blog_id, attachment_id)"+ ")");
