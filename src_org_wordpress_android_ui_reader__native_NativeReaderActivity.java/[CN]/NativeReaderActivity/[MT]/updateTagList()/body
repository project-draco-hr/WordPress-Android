{
  ReaderActions.UpdateResultListener listener=new ReaderActions.UpdateResultListener(){
    @Override public void onUpdateResult(    ReaderActions.UpdateResult result){
      if (result != ReaderActions.UpdateResult.FAILED)       mHasUpdatedTagList=true;
      if (result == ReaderActions.UpdateResult.CHANGED) {
        ReaderPostListFragment fragment=getPostListFragment();
        if (fragment != null)         fragment.refreshTags();
      }
    }
  }
;
  ReaderTagActions.updateTags(listener);
}
