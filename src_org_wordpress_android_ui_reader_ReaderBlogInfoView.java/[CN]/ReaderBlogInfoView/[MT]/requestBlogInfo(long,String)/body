{
  ReaderActions.UpdateBlogInfoListener listener=new ReaderActions.UpdateBlogInfoListener(){
    @Override public void onResult(    ReaderBlogInfo blogInfo){
      if (blogInfo != null) {
        showBlogInfo(blogInfo);
      }
 else {
        hideProgress();
        if (!mIsBlogInfoLoaded && mBlogInfoListener != null) {
          mBlogInfoListener.onBlogInfoFailed();
        }
      }
    }
  }
;
  ReaderBlogActions.updateBlogInfo(blogId,blogUrl,listener);
}
