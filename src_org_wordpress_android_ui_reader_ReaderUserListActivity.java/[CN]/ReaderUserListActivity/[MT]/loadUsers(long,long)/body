{
  new Thread(){
    @Override public void run(){
      final ReaderUserList users=ReaderUserTable.getUsersWhoLikePost(blogId,postId,ReaderConstants.READER_MAX_USERS_TO_DISPLAY);
      runOnUiThread(new Runnable(){
        @Override public void run(){
          if (!isFinishing()) {
            getAdapter().setUsers(users);
          }
        }
      }
);
    }
  }
.start();
}
