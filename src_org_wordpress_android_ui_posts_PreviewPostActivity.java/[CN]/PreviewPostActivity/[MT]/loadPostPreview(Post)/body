{
  if (post != null) {
    String url=post.getPermaLink();
    Date d=new Date();
    if (WordPress.getCurrentBlog().isPrivate() || post.isLocalDraft() || post.isLocalChange()|| post.getDate_created_gmt() > d.getTime() || !post.getPost_status().equals("publish")) {
      if (-1 == url.indexOf('?')) {
        url=url.concat("?preview=true");
      }
 else {
        url=url.concat("&preview=true");
      }
      loadAuthenticatedUrl(url);
    }
 else {
      loadUrl(url);
    }
  }
}
