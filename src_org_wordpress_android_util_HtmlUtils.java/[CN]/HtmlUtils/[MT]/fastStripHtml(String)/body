{
  if (TextUtils.isEmpty(text))   return text;
  if (text.lastIndexOf("<p") > 0)   text=text.replaceAll("<p(.|\n)*?>","\n<p>");
  if (text.contains("<br"))   text=text.replaceAll("<br(.|\n)*?>","\n");
  if (!text.contains("&"))   return text.replaceAll("<(.|\n)*?>","").trim();
  return StringUtils.unescapeHTML(text.replaceAll("<(.|\n)*?>","").trim());
}
