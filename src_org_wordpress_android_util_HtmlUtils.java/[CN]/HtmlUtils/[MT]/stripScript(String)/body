{
  if (text == null)   return null;
  StringBuilder sb=new StringBuilder(text);
  int start=sb.indexOf("<script");
  while (start > -1) {
    int end=sb.indexOf("</script>",start);
    if (end == -1)     return sb.toString();
    sb.delete(start,end + 9);
    start=sb.indexOf("<script",start);
  }
  return sb.toString();
}
