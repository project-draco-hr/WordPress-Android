{
  WordPressDB eulaDB=new WordPressDB(this);
  long lastStatsDate=eulaDB.getStatsDate(this);
  long now=System.currentTimeMillis();
  if ((now - lastStatsDate) > 604800000) {
    new Thread(){
      public void run(){
        uploadStats(numBlogs);
      }
    }
.start();
    eulaDB.setStatsDate(this);
  }
}
