{
  long lastStatsDate=WordPress.wpDB.getStatsDate(this);
  long now=System.currentTimeMillis();
  if ((now - lastStatsDate) > 604800000) {
    new Thread(){
      public void run(){
        uploadStats(numBlogs);
        if (WordPress.currentBlog != null)         new refreshBlogContentTask().execute(false);
      }
    }
.start();
    WordPress.wpDB.setStatsDate(this);
  }
}
