{
  super.onBlogChanged();
  try {
    blog=new Blog(id,Dashboard.this);
  }
 catch (  Exception e) {
    Toast.makeText(Dashboard.this,getResources().getText(R.string.blog_not_found),Toast.LENGTH_SHORT).show();
    finish();
  }
  updateCommentBadge();
  new refreshBlogContentTask().execute(false);
}
