{
  mRefreshListener=listener;
  mPullToRefreshLayout=pullToRefreshLayout;
  mHeaderTransformer=new PullToRefreshHeaderTransformer();
  ActionBarPullToRefresh.from(activity).options(Options.create().headerTransformer(mHeaderTransformer).build()).allChildrenArePullable().listener(this).setup(mPullToRefreshLayout);
}
