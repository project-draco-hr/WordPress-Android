{
  Blog blog=WordPress.getCurrentBlog();
  if (blog != null) {
    String blogId=String.valueOf(blog.getLocalTableBlogId());
    Cursor cursor;
    if (mediaId == null) {
      cursor=WordPress.wpDB.getFirstMediaFileForBlog(blogId);
    }
 else {
      cursor=WordPress.wpDB.getMediaFile(blogId,mediaId);
    }
    refreshViews(cursor);
    cursor.close();
  }
}
