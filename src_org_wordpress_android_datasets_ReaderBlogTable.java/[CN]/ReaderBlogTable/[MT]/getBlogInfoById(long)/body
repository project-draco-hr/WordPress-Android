{
  String[] args={Long.toString(blogId)};
  String sql="SELECT * FROM tbl_blog_info WHERE blog_id=?";
  Cursor c=ReaderDatabase.getReadableDb().rawQuery(sql,args);
  try {
    if (!c.moveToFirst()) {
      return null;
    }
    return getBlogInfoFromCursor(c);
  }
  finally {
    SqlUtils.closeCursor(c);
  }
}
