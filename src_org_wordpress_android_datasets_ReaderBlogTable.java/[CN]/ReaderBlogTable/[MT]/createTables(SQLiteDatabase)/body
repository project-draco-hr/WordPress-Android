{
  db.execSQL("CREATE TABLE tbl_blog_info (" + "	blog_url      TEXT COLLATE NOCASE PRIMARY KEY," + "    blog_id       INTEGER DEFAULT 0,"+ "    name          TEXT,"+ "    description   TEXT,"+ "    is_private    INTEGER DEFAULT 0,"+ "    is_jetpack    INTEGER DEFAULT 0,"+ "    is_following  INTEGER DEFAULT 0,"+ "    num_followers INTEGER DEFAULT 0)");
  db.execSQL("CREATE UNIQUE INDEX idx_blog_info_blog_id ON tbl_blog_info(blog_id)");
  db.execSQL("CREATE TABLE tbl_followed_blogs (" + "	blog_url        TEXT COLLATE NOCASE PRIMARY KEY," + " is_following    INTEGER DEFAULT 0)");
}
