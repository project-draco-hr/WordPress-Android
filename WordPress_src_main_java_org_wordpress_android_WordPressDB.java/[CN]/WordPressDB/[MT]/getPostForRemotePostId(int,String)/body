{
  String[] args={String.valueOf(blogID),remotePostID};
  Cursor c=db.query(POSTS_TABLE,null,"blogID=? AND postid=?",args,null,null,null);
  try {
    if (c.moveToFirst()) {
      return getPostFromCursor(c);
    }
 else {
      return null;
    }
  }
  finally {
    SqlUtils.closeCursor(c);
  }
}
